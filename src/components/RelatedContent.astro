---
/**
 * RelatedContent Component
 * 
 * Displays related projects and decisions for cross-referencing content.
 * Fetches actual content data from slugs and renders compact cards.
 * 
 * @component
 * 
 * @example
 * ```astro
 * <RelatedContent 
 *   relatedProjects={['project-slug-1', 'project-slug-2']}
 *   relatedDecisions={['decision-slug-1']}
 * />
 * ```
 */

import { getCollection } from 'astro:content';

interface Props {
  /** Array of project slugs to display */
  relatedProjects?: string[];
  
  /** Array of decision slugs to display */
  relatedDecisions?: string[];
  
  /** Section title (default: "Related") */
  title?: string;
}

const { 
  relatedProjects = [], 
  relatedDecisions = [],
  title = "Related"
} = Astro.props;

// Fetch all collections once
const allProjects = await getCollection('projects');
const allDecisions = await getCollection('decisions');

// Filter to get related items
const projects = relatedProjects
  .map(slug => allProjects.find(p => p.id === slug))
  .filter((p): p is NonNullable<typeof p> => p !== undefined);

const decisions = relatedDecisions
  .map(slug => allDecisions.find(d => d.id === slug))
  .filter((d): d is NonNullable<typeof d> => d !== undefined);

const hasRelated = projects.length > 0 || decisions.length > 0;

/**
 * Formats a date to "Month Year" format
 */
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short'
  }).format(date);
}
---

{hasRelated && (
  <aside class="related-content">
    <h2 class="related-title">{title}</h2>
    
    <div class="related-grid">
      {projects.length > 0 && (
        <div class="related-section">
          <h3 class="related-section-title">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
            </svg>
            Case Studies
          </h3>
          <ul class="related-list">
            {projects.map((project) => (
              <li>
                <a href={`/projects/${project.id}`} class="related-item">
                  <span class="related-item-meta">{project.data.role} Â· {project.data.year}</span>
                  <span class="related-item-title">{project.data.title}</span>
                </a>
              </li>
            ))}
          </ul>
        </div>
      )}
      
      {decisions.length > 0 && (
        <div class="related-section">
          <h3 class="related-section-title">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
              <line x1="12" y1="17" x2="12.01" y2="17"></line>
            </svg>
            Decisions
          </h3>
          <ul class="related-list">
            {decisions.map((decision) => (
              <li>
                <a href={`/decisions/${decision.id}`} class="related-item">
                  <span class="related-item-meta">{formatDate(decision.data.date)}</span>
                  <span class="related-item-title">{decision.data.title}</span>
                </a>
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  </aside>
)}

<style>
  .related-content {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .related-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    letter-spacing: -0.01em;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .related-section-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }

  .related-section-title svg {
    opacity: 0.7;
  }

  .related-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .related-item {
    display: block;
    padding: 1rem 1.25rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    text-decoration: none;
    transition: border-color 0.2s ease, background 0.2s ease;
  }

  .related-item:hover {
    border-color: var(--color-text-muted);
    background: var(--color-bg-elevated);
  }

  .related-item-meta {
    display: block;
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
  }

  .related-item-title {
    display: block;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.4;
  }

  @media (max-width: 640px) {
    .related-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .related-item {
      padding: 0.875rem 1rem;
    }
  }
</style>
