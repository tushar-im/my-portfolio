---
/**
 * Decision Detail Page
 * 
 * Dynamic route that displays the full decision record for a specific decision entry.
 * Presents a structured view of the decision-making process including context, the
 * decision made, alternatives considered with pros/cons, reasoning, and optional
 * additional content.
 * 
 * Features:
 * - Static path generation for all decision entries
 * - Structured decision presentation (Context → Decision → Alternatives → Reasoning)
 * - Alternatives comparison with pros/cons lists
 * - Tag display
 * - Optional markdown body content
 * - SEO optimization with article type
 * - Scroll-to-top functionality
 * - Related content navigation
 * - Back navigation to decisions list
 * 
 * Route: /decisions/[slug]
 * 
 * @page
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import SEO from '../../components/SEO.astro';
import ScrollToTop from '../../components/ScrollToTop.astro';
import BackLink from '../../components/BackLink.astro';
import RelatedContent from '../../components/RelatedContent.astro';
import { getCollection, render } from 'astro:content';
import type { GetStaticPaths } from 'astro';

/**
 * Generates static paths for all decision entries
 * 
 * Queries the decisions content collection and creates a route for each entry
 * using the entry ID as the slug parameter.
 * 
 * @returns Array of path objects with params and props
 */
export const getStaticPaths: GetStaticPaths = async () => {
  const decisions = await getCollection('decisions');
  return decisions.map((decision) => ({
    params: { slug: decision.id },
    props: { decision },
  }));
};

type DecisionEntry = Awaited<ReturnType<typeof getCollection<'decisions'>>>[number];

interface Props {
  /** The decision entry from the content collection */
  decision: DecisionEntry;
}

const { decision } = Astro.props;
const { Content } = await render(decision);

/**
 * Formats the decision date for display
 * 
 * Uses US English locale with full date format.
 * Example output: "January 15, 2024"
 */
const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(decision.data.date);
---

<BaseLayout>
  <SEO 
    slot="head"
    title={`${decision.data.title} - Decision Record`}
    description={decision.data.context}
    type="article"
  />

  <main class="decision-page">
    <article class="decision-content">
      <header class="decision-header">
        <time class="decision-date" datetime={decision.data.date.toISOString()}>
          {formattedDate}
        </time>
        
        <h1 class="decision-title">{decision.data.title}</h1>
        
        {decision.data.tags && decision.data.tags.length > 0 && (
          <div class="decision-tags">
            {decision.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </header>

      <section class="decision-section">
        <h2 class="section-label">Context</h2>
        <p class="section-content">{decision.data.context}</p>
      </section>

      <section class="decision-section decision-made">
        <h2 class="section-label">Decision</h2>
        <p class="section-content highlight">{decision.data.decision}</p>
      </section>

      <section class="decision-section">
        <h2 class="section-label">Alternatives Considered</h2>
        <div class="alternatives-list">
          {decision.data.alternatives.map((alt) => (
            <div class="alternative-item">
              <h3 class="alternative-option">{alt.option}</h3>
              <div class="alternative-details">
                {alt.pros && alt.pros.length > 0 && (
                  <div class="pros-cons">
                    <span class="detail-label pros-label">Pros</span>
                    <ul class="detail-list">
                      {alt.pros.map((pro) => (
                        <li>{pro}</li>
                      ))}
                    </ul>
                  </div>
                )}
                {alt.cons && alt.cons.length > 0 && (
                  <div class="pros-cons">
                    <span class="detail-label cons-label">Cons</span>
                    <ul class="detail-list">
                      {alt.cons.map((con) => (
                        <li>{con}</li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      </section>

      <section class="decision-section">
        <h2 class="section-label">Reasoning</h2>
        <p class="section-content">{decision.data.reasoning}</p>
      </section>

      {decision.body && decision.body.trim().length > 0 && (
        <section class="decision-body prose">
          <Content />
        </section>
      )}

      <RelatedContent 
        relatedProjects={decision.data.relatedProjects} 
        relatedDecisions={decision.data.relatedDecisions} 
      />

      <BackLink href="/decisions" text="All decisions" />
    </article>
  </main>

  <ScrollToTop />

  <style>
    .decision-page {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }

    .decision-content {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .decision-header {
      padding-bottom: 2rem;
    }

    .decision-date {
      display: block;
      font-size: 0.875rem;
      color: var(--color-text-muted);
      margin-bottom: 0.75rem;
    }

    .decision-title {
      font-size: 2rem;
      font-weight: 700;
      line-height: 1.3;
      letter-spacing: -0.02em;
      margin-bottom: 1rem;
    }

    .decision-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .tag {
      font-size: 0.75rem;
      padding: 0.25rem 0.75rem;
      background: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: 4px;
      color: var(--color-text-secondary);
    }

    .decision-section {
      padding-bottom: 1.5rem;
    }

    .section-label {
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: var(--color-text-muted);
      margin-bottom: 0.75rem;
    }

    .section-content {
      font-size: 1.0625rem;
      line-height: 1.7;
      color: var(--color-text-secondary);
    }

    .section-content.highlight {
      color: var(--color-text);
      font-weight: 500;
      padding: 1rem 1.25rem;
      background: var(--color-bg-secondary);
      border-left: 3px solid var(--color-accent);
      border-radius: 0 6px 6px 0;
    }

    .alternatives-list {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .alternative-item {
      padding: 1.25rem;
      background: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: 8px;
    }

    .alternative-option {
      font-size: 1rem;
      font-weight: 600;
      color: var(--color-text);
      margin-bottom: 1rem;
    }

    .alternative-details {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    .pros-cons {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .detail-label {
      font-size: 0.6875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .pros-label {
      color: #22c55e;
    }

    .cons-label {
      color: #ef4444;
    }

    .detail-list {
      list-style: none;
      padding: 0;
      margin: 0;
      font-size: 0.875rem;
      line-height: 1.6;
      color: var(--color-text-secondary);
    }

    .detail-list li {
      position: relative;
      padding-left: 1rem;
      margin-bottom: 0.375rem;
    }

    .detail-list li::before {
      content: "•";
      position: absolute;
      left: 0;
      color: var(--color-text-muted);
    }

    .decision-body {
      padding-top: 1rem;
    }

    .decision-body.prose :global(h2) {
      font-size: 1.25rem;
      font-weight: 600;
      margin-top: 2rem;
      margin-bottom: 1rem;
      color: var(--color-text);
    }

    .decision-body.prose :global(h2:first-child) {
      margin-top: 0;
    }

    .decision-body.prose :global(p) {
      font-size: 1.0625rem;
      line-height: 1.7;
      color: var(--color-text-secondary);
      margin-bottom: 1.25rem;
    }

    .decision-body.prose :global(ul),
    .decision-body.prose :global(ol) {
      font-size: 1.0625rem;
      line-height: 1.7;
      color: var(--color-text-secondary);
      margin-bottom: 1.25rem;
      padding-left: 1.5rem;
    }

    .decision-body.prose :global(li) {
      margin-bottom: 0.5rem;
    }

    .decision-body.prose :global(strong) {
      color: var(--color-text);
      font-weight: 600;
    }

    .decision-body.prose :global(code) {
      font-size: 0.9em;
      padding: 0.2em 0.4em;
      background: var(--color-bg-secondary);
      border-radius: 4px;
    }

    .decision-body.prose :global(pre) {
      padding: 1.25rem;
      background: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: 8px;
      overflow-x: auto;
      margin-bottom: 1.5rem;
    }

    .decision-body.prose :global(pre code) {
      padding: 0;
      background: none;
    }

    @media (max-width: 768px) {
      .decision-page {
        padding: 1.5rem 1rem;
      }

      .decision-title {
        font-size: 1.5rem;
      }

      .alternative-details {
        grid-template-columns: 1fr;
      }

      .section-content {
        font-size: 1rem;
      }
    }
  </style>
</BaseLayout>
